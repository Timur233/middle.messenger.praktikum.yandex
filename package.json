{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "test": "mocha",
    "dev": "vite --host",
    "prebuild": "tsc --noEmit",
    "lint:ts": "eslint '**/*.ts'",
    "lint:scss": "stylelint '**/*.scss'",
    "lint": "npm run lint:ts && npm run lint:scss",
    "precommit": "lint-staged && npm run test",
    "prepare": "husky install",
    "build": "vite build",
    "start": "vite build && vite preview --port 3000"

  },
  "devDependencies": {
    "@types/chai": "^4.3.19",
    "@types/handlebars": "^4.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.4",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "handlebars": "^4.7.8",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "sass": "^1.77.8",
    "stylelint": "^16.8.1",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vite": "^5.3.1",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "chai": "^5.1.1",
    "handlebars": "^4.7.8",
    "jsdom": "^25.0.0",
    "sinon": "^18.0.0",
    "sinon-chai": "^4.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.4.1",
    "uuid": "^10.0.0"
  },
  "engines": {
    "node": ">=v18.13.0",
    "npm": ">=9.3.1"
  }
}
